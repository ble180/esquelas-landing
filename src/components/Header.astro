---
import Logo from '../assets/logo-navbar.svg'
---

<header>
    <nav class="container">
        <div class="nav-logo">
            <a href="https://esquelasdigital.com">
                <img src={Logo} alt="brand logo">
            </a>
        </div>
        <div class="nav-links">
            <a href="#features">Funcionalidad</a>
            <a href="#customers">Clientes</a>
            <a href="#contact">Contacto</a>
        </div>
    </nav>
</header>

<style lang="scss">
nav{
    position: relative;
    display: grid;
    grid-template-columns: 12% 55% 30%;
    top: 20px;
    align-items: center;
    .nav-cta{
       text-align: right;
    }
    .nav-links{
        margin-top: -2px;
    }
    a:not(.button){
        padding: 0 10px;
        color: #333;
        text-decoration: none;
        font-weight: 500;
        img{
            width: 90px;
            margin-left: -6px;
            margin-top: 2px;
        }
    }

    @media (max-width:900px) {
        grid-template-columns: 30% 70%;
        .nav-logo img{
            margin-top: 7px;
        }
        .nav-links{
            display: none;
        }
    }
}


.pulse{
    animation: pulse 2s cubic-bezier(.4,0,.6,1) infinite;
}
@keyframes pulse {
   50% { opacity: .7; }
}

.tag{
    background-color: var(--tenary);
    color: #fff;
    padding: 5px 10px;
    border-radius: 20px;
    font-size: 1.2rem;
    font-weight: 500;
}
</style>